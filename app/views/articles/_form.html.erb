<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |m|%>
  <p><%= m %></p>
  <% end %>
<% end %>

<%= form_for @article do |f| %>
  <div>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>